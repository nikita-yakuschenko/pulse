# ============================================================
# Скопируйте в .env и заполните. Значения см. docs/dokploy-supabase-access.md
# ВАЖНО: не коммитьте .env в git. В репозитории только плейсхолдеры.
# ============================================================

# Supabase (обязательно для авторизации)
NEXT_PUBLIC_SUPABASE_URL="https://ваш-проект.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...."
# Подтверждение почты: в Supabase (self-hosted) задайте:
#SITE_URL=https://callback
#ADDITIONAL_REDIRECT_URLS=https:///callback

# Prisma / БД (для db:push, миграций). Туннель — см. docs/supabase-vps-postgres.md
# DATABASE_URL="postgresql://postgres:ПАРОЛЬ@127.0.0.1:5433/postgres"

# 2FA: код на почту (Resend)
# RESEND_API_KEY="re_xxxxxxxx"
# RESEND_FROM_EMAIL="noreply@yourdomain.com"

# 2FA: код в Telegram (gateway.telegram.org)
# TELEGRAM_GATEWAY_TOKEN="xxxxxxxx"

# Подпись cookie для 2FA (обязательно в production, иначе подмена cookie)
# MFA_COOKIE_SECRET="случайная-строка-32+_символов"

# Сброс 2FA по паролю (только на сервере, не отдавать на клиент)
# SUPABASE_SERVICE_ROLE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...."

# Redis — кеш данных 1С и др. (опционально; без него кеш отключён).
# В Docker имя хоста должно совпадать с именем сервиса Redis в той же сети (например pulse-redis, не redis).
# REDIS_URL="redis://pulse-redis:6379"

# DaData — подсказки и стандартизация адресов (график монтажа и др.). Лимит 10k запросов/день на бесплатном тарифе.
# DA_DATA_API_KEY="xxxxxxxx"
# DA_DATA_SECRET_KEY="xxxxxxxx"
